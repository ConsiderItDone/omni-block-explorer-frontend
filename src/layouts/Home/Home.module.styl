@import '../../styles/variables.styl'

.tables
  width 100%
  display flex
  flex-wrap: wrap
  gap 40px
  .ant-table-wrapper
    width calc(50% - 20px)
    overflow-y auto
    overflow-x: hidden
    .ant-table
      .ant-table-title
        h3
          color white !important
        @media(max-width: 576px)
          margin-bottom 8px
          h3
            font-size 16px
            font-weight 500
    @media(max-width: 991px)
      width 100%


.chainData
/*   padding 28px 30px 28px 33px
  border-radius: 24px
  margin-bottom 32px
  background-color $window-dark */
  @media(max-width: 576px)
    padding 21px 16px
    margin-bottom 16px
  *
    color white
  .title
    font-size 24px
    line-height 32px
    margin-bottom 48px
    font-weight 500
    @media(max-width: 576px)
      font-size 16px
      margin-bottom 20px
  .data
    display flex
    justify-content: flex-start
    flex-wrap: wrap
    width 100%
    >div
      padding-left:  32px
      width 25%
      border-right: 1px solid #27333F
      &:first-child
        padding 0
      &:last-child
        border-right: none
    h3
      font-size: 32px;
      line-height: 40px;
      font-weight normal
      margin-bottom 0
      @media(max-width: 576px)
        font-size 16px 
    h4
      color $gray
      font-weight: 500;
      font-size: 16px;
      line-height: 24px;
      margin-bottom 0
    .separator
      width 100%
      border-bottom: 1px solid #27333F
      margin-bottom 20px
      @media(max-width: 576px)
        margin-bottom 0
    @media(max-width: 768px)
      >div
        width 50%
        padding 0        
        &:first-child, &:nth-child(2)
          margin-bottom 20px
        &:nth-child(2)
          border-right: none
        &:nth-child(2), &:nth-child(5)
          padding-left 20px
    @media(max-width: 576px)
      >div
        width 50%
        border none
        padding 0 !important
        &:first-child, &:nth-child(2)
          margin-bottom 0
        &:first-child, &:nth-child(2)
          border-top: 1px solid #27333F
        &:nth-child(odd)
          padding-right 15px
        h4
          margin-top 14px
          margin-bottom 0
        h3
          font-size 16px
          line-height: 24px;
          margin-bottom 14px
