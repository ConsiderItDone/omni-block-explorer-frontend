.overlay_wrap
  .overlay_bg
    height 100%
    width 100%
    position fixed
    top 0
    left 0
    background-color rgba(black, 0)
    transition: 0.5s all
    z-index: -10
    >*
      width 100%
      height 100%
      transform: translateX(-100%)
      transition .3s transform
      
.overlay_wrap.active
  .overlay_bg
    background-color rgba(black, 0.4)
    z-index: 100
    >*
      transform: translateX(0)
